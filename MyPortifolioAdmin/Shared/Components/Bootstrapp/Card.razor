<div class="card">
    <div class="card-header">
        <h1 class="card-title">@Title</h1>
    </div>
    <div class="card-body">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; } = "Card Title";
}